{
  "author": "Chris Shaw <me@cshaw.xyz>",
  "description": "A proxy server and starter kit for using Vite with Adobe Experience Manager.",
  "homepage": "https://aemvite.dev/guide/front-end/vite-plugin/",
  "license": "Apache-2.0",
  "name": "@aem-vite/vite-aem-plugin",
  "repository": {
    "type": "git",
    "url": "https://github.com/aem-vite/vite-aem-plugin"
  },
  "bugs": {
    "url": "https://github.com/aem-vite/vite-aem-plugin/issues"
  },
  "version": "3.0.0",
  "engines": {
    "node": ">= 14.18.0"
  },
  "keywords": [
    "aem",
    "vite",
    "rollup",
    "plugin",
    "server",
    "proxy",
    "starter",
    "starter-kit",
    "build-tools"
  ],
  "files": [
    "lib"
  ],
  "sideEffects": false,
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "exports": {
    "import": "./lib/index.mjs",
    "require": "./lib/index.js"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/",
    "tag": "latest"
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint --ext .ts src/**",
    "prepare": "husky install",
    "semantic-release": "semantic-release"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "footer-max-line-length": [
        2,
        "always",
        300
      ]
    }
  },
  "dependencies": {
    "@aem-vite/import-rewriter": "^7.0.0",
    "@vitejs/plugin-react": "^2.2.0",
    "debug": "^4.3.4",
    "vite": "^3.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.1",
    "@commitlint/config-conventional": "^17.6.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/debug": "^4.1.7",
    "@types/node": "^14.18.43",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1",
    "eslint": "^8.39.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "prettier": "^2.8.8",
    "semantic-release": "^19.0.5",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4"
  },
  "peerDependencies": {
    "@vitejs/plugin-react": "^2.0.0 || ^3.0.0 || ^4.0.0",
    "vite": "^3.0.0 || ^4.0.0"
  },
  "peerDependenciesMeta": {
    "@vitejs/plugin-react": {
      "optional": true
    }
  },
  "optionalDependencies": {
    "fsevents": "~2.3.2"
  }
}
